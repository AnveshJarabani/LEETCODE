{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#e600d3",
          "foreground": "#000000",
          "powerline_symbol": "",
          "properties": {
            "style": "short",
            "home_icon": "\uf015 "
          },
          "style": "powerline",
          "template": " {{ .Path }} \uf07c ",
          "type": "path"
        }
      ],
      "type": "prompt"
    },

    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "background": "#3474f6",
          "foreground": "#ffffff",
          "powerline_symbol": "",
          "properties": {
            "macos": "\uf179 ",
            "ubuntu": "\uf31b ",
            "windows": "\ue62a "
          },
          "style": "powerline",
          "template": " {{.Icon}}",
          "type": "os"
        },
        {
          "background": "#f6ff00",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FF9248{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#ff4500{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "foreground": "#000000",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \uf0c7 {{ .StashCount }}{{ end }} ",
          "type": "git"
        },
        {
          "background": "#ff6a00",
          "foreground": "#000000",
          "type": "shell",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \uf68c {{ .Name }} "
        },
        {
          "background": "#f1184c",
          "background_templates": ["{{ if eq .Code 0 }}#15d535{{ end }}"],
          "foreground": "#000000",
          "type": "session",
          "properties": {
            "always_enabled": true
          },
          "style": "diamond",
          "template": " \uf2be {{ if .SSHSession }} \ueba9 {{ end }}{{ .UserName }} ",
          "trailing_diamond": "\ue0b0"
        }
      ],
      "type": "prompt"
    }
  ],
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "final_space": true,
  "version": 2
}
